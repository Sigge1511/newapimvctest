@model IEnumerable<assignment_mvc_carrental.ViewModels.VehicleViewModel>
@using Microsoft.AspNetCore.Identity
@using assignment_mvc_carrental.Models


@{
    ViewData["Title"] = "Index";
}
<br>
<h1>Our premium vehicles</h1>

