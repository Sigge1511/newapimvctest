<br>
<table class="table">
    <thead>
        <tr>
            <th>
                Preview
            </th>
            <th>
                Name
            </th>
            <th>
                Year Made
            </th>
            <th>
                Rental price per day
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
